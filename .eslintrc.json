{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:svelte/recommended",
    "plugin:storybook/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": [
    "jest",
    "svelte"
  ],
  "overrides": [
    {
      "files": [
        "**/*.svelte"
      ],
      "parser": "svelte-eslint-parser"
    }
  ]
}